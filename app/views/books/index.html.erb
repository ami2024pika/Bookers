<h1>Books</h1>

<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body, "Body" %>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit "Create Book" %>
  </div>
<% end %>